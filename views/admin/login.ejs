<style>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap');

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
        background: #0f0f23;
        background-image: 
            radial-gradient(circle at 20% 30%, rgba(120, 119, 198, 0.3) 0%, transparent 50%),
            radial-gradient(circle at 80% 70%, rgba(255, 119, 48, 0.2) 0%, transparent 50%),
            radial-gradient(circle at 40% 80%, rgba(139, 92, 246, 0.2) 0%, transparent 50%);
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        overflow: hidden;
    }

    /* Animated background grid */
    body::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-image: 
            linear-gradient(rgba(255, 255, 255, 0.02) 1px, transparent 1px),
            linear-gradient(90deg, rgba(255, 255, 255, 0.02) 1px, transparent 1px);
        background-size: 50px 50px;
        animation: grid-move 20s linear infinite;
    }

    @keyframes grid-move {
        0% { transform: translate(0, 0); }
        100% { transform: translate(50px, 50px); }
    }

    .login-container {
        position: relative;
        z-index: 10;
        width: 100%;
        max-width: 460px;
        padding: 20px;
    }

    .main {
        background: rgba(255, 255, 255, 0.08);
        backdrop-filter: blur(40px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 24px;
        padding: 0;
        position: relative;
        overflow: hidden;
        box-shadow: 
            0 32px 64px rgba(0, 0, 0, 0.4),
            0 0 0 1px rgba(255, 255, 255, 0.05),
            inset 0 1px 0 rgba(255, 255, 255, 0.1);
        animation: slideUp 0.8s cubic-bezier(0.16, 1, 0.3, 1);
    }

    @keyframes slideUp {
        from {
            opacity: 0;
            transform: translateY(60px) scale(0.95);
        }
        to {
            opacity: 1;
            transform: translateY(0) scale(1);
        }
    }

    /* Header Section */
    .login-header {
        padding: 48px 48px 24px 48px;
        text-align: center;
        position: relative;
    }

    .logo-container {
        width: 80px;
        height: 80px;
        margin: 0 auto 24px auto;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        box-shadow: 
            0 20px 40px rgba(102, 126, 234, 0.3),
            inset 0 1px 0 rgba(255, 255, 255, 0.2);
    }

    .logo-container::before {
        content: '';
        position: absolute;
        inset: 2px;
        background: linear-gradient(135deg, rgba(255, 255, 255, 0.1), transparent);
        border-radius: 18px;
        pointer-events: none;
    }

    .logo-container i {
        font-size: 32px;
        color: white;
        position: relative;
        z-index: 2;
    }

    .title h4 {
        font-size: 28px;
        font-weight: 700;
        color: white;
        margin: 0 0 8px 0;
        letter-spacing: -0.02em;
    }

    .subtitle {
        font-size: 16px;
        color: rgba(255, 255, 255, 0.6);
        font-weight: 400;
        margin: 0;
    }

    /* Form Section */
    .form-container {
        padding: 24px 48px 48px 48px;
    }

    .error-message {
        background: rgba(239, 68, 68, 0.1);
        border: 1px solid rgba(239, 68, 68, 0.2);
        color: #fca5a5;
        padding: 16px 20px;
        border-radius: 12px;
        margin-bottom: 24px;
        font-size: 14px;
        font-weight: 500;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .input-group {
        margin-bottom: 24px;
        position: relative;
    }

    .input-label {
        display: block;
        font-size: 14px;
        font-weight: 500;
        color: rgba(255, 255, 255, 0.8);
        margin-bottom: 8px;
        letter-spacing: -0.01em;
    }

    .input-wrapper {
        position: relative;
        background: rgba(30, 30, 46, 0.9); /* Darker background */
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 12px;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        height: 56px; /* Increased input size */
    }

    .input-wrapper:hover {
        border-color: rgba(255, 255, 255, 0.2);
        background: rgba(30, 30, 46, 0.95);
    }

    .input-wrapper.focused {
        border-color: #667eea;
        background: rgba(30, 30, 46, 0.95);
        box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
    }

    .form-control {
        width: 100%;
        padding: 18px 48px 18px 20px; /* Adjusted padding for larger size */
        background: transparent;
        border: none;
        color: white; /* White text */
        font-size: 16px;
        font-weight: 400;
        outline: none;
        border-radius: 11px;
        height: 100%; /* Full height of wrapper */
    }

    .form-control::placeholder {
        color: rgba(255, 255, 255, 0.4);
        font-weight: 400;
    }

    .input-icon {
        position: absolute;
        right: 16px;
        top: 50%;
        transform: translateY(-50%);
        color: rgba(255, 255, 255, 0.4);
        font-size: 18px;
        cursor: pointer;
        transition: all 0.3s ease;
        padding: 4px;
    }

    .input-icon:hover {
        color: rgba(255, 255, 255, 0.8);
    }

    .login-button {
        width: 100%;
        padding: 16px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        border-radius: 12px;
        color: white;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        position: relative;
        overflow: hidden;
        box-shadow: 0 8px 24px rgba(102, 126, 234, 0.3);
        margin-top: 8px;
    }

    .login-button::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
        transition: left 0.6s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .login-button:hover {
        transform: translateY(-2px);
        box-shadow: 0 16px 32px rgba(102, 126, 234, 0.4);
    }

    .login-button:hover::before {
        left: 100%;
    }

    .login-button:active {
        transform: translateY(0);
    }

    .login-button.loading {
        pointer-events: none;
        opacity: 0.8;
    }

    .login-button.loading::after {
        content: '';
        position: absolute;
        top: 50%;
        left: 50%;
        width: 20px;
        height: 20px;
        margin: -10px 0 0 -10px;
        border: 2px solid rgba(255, 255, 255, 0.3);
        border-top-color: white;
        border-radius: 50%;
        animation: spin 1s linear infinite;
    }

    @keyframes spin {
        to { transform: rotate(360deg); }
    }

    /* Additional visual elements */
    .decorative-element {
        position: absolute;
        width: 200px;
        height: 200px;
        background: linear-gradient(135deg, rgba(102, 126, 234, 0.1), rgba(118, 75, 162, 0.1));
        border-radius: 50%;
        filter: blur(40px);
        animation: float 6s ease-in-out infinite;
    }

    .decorative-element:nth-child(1) {
        top: -100px;
        right: -100px;
        animation-delay: 0s;
    }

    .decorative-element:nth-child(2) {
        bottom: -100px;
        left: -100px;
        animation-delay: 3s;
    }

    @keyframes float {
        0%, 100% { transform: translateY(0px) scale(1); }
        50% { transform: translateY(-20px) scale(1.1); }
    }

    /* Responsive Design */
    @media (max-width: 480px) {
        .login-container {
            padding: 16px;
        }
        
        .login-header,
        .form-container {
            padding-left: 24px;
            padding-right: 24px;
        }
        
        .title h4 {
            font-size: 24px;
        }
        
        .logo-container {
            width: 64px;
            height: 64px;
            border-radius: 16px;
        }
        
        .logo-container i {
            font-size: 24px;
        }

        .input-wrapper {
            height: 48px; /* Slightly smaller for mobile */
        }

        .form-control {
            padding: 14px 48px 14px 20px; /* Adjusted for mobile */
        }
    }

    /* Dark theme enhancements */
    @media (prefers-color-scheme: dark) {
        .main {
            background: rgba(255, 255, 255, 0.06);
        }
    }
</style>

<section class="login-container">
    <div class="main">
        <div class="decorative-element"></div>
        <div class="decorative-element"></div>
        
        <div class="login-header">
            <div class="logo-container">
                <i class="bi bi-shield-lock-fill"></i>
            </div>
            <div class="title">
                <h4>Admin Portal</h4>
                <p class="subtitle">Sign in to access your dashboard</p>
            </div>
        </div>

        <div class="form-container">
            <form action="/admin/login" method="post" id="loginForm">
                <% if (typeof err !== 'undefined' && err) { %>
                <div class="error-message">
                    <i class="bi bi-exclamation-triangle-fill"></i>
                    <%= err %>
                </div>
                <% } %>
                
                <div class="input-group">
                    <label class="input-label" for="email">Email Address</label>
                    <div class="input-wrapper">
                        <input 
                            class="form-control" 
                            type="email" 
                            id="email"
                            name="email" 
                            placeholder="Enter your email"
                            required
                            autocomplete="email"
                        />
                        <i class="bi bi-envelope input-icon"></i>
                    </div>
                </div>

                <div class="input-group">
                    <label class="input-label" for="password">Password</label>
                    <div class="input-wrapper">
                        <input 
                            class="form-control" 
                            type="password" 
                            id="password"
                            name="password" 
                            placeholder="Enter your password"
                            required
                            autocomplete="current-password"
                        />
                        <i class="bi bi-eye-slash input-icon" id="togglePassword"></i>
                    </div>
                </div>

                <button type="submit" class="login-button" id="loginBtn">
                    Sign In
                </button>
            </form>
        </div>
    </div>
</section>

<script>
    // Enhanced password toggle
    const togglePassword = document.getElementById('togglePassword');
    const password = document.getElementById('password');

    togglePassword.addEventListener('click', function() {
        const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
        password.setAttribute('type', type);
        
        this.classList.toggle('bi-eye');
        this.classList.toggle('bi-eye-slash');
    });

    // Input focus effects
    document.querySelectorAll('.form-control').forEach(input => {
        input.addEventListener('focus', function() {
            this.closest('.input-wrapper').classList.add('focused');
        });
        
        input.addEventListener('blur', function() {
            this.closest('.input-wrapper').classList.remove('focused');
        });
    });

    // Form submission with loading state
    document.getElementById('loginForm').addEventListener('submit', function(e) {
        const loginBtn = document.getElementById('loginBtn');
        loginBtn.classList.add('loading');
        loginBtn.innerHTML = '';
        
        // Prevent double submission
        setTimeout(() => {
            loginBtn.style.pointerEvents = 'none';
        }, 100);
    });

    // Auto-focus first input
    document.addEventListener('DOMContentLoaded', function() {
        document.getElementById('email').focus();
    });
</script>

