        padding: 40px 0;
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 25px;
    }

    .continue-shopping {
        color: #6c757d;
        text-decoration: none;
        font-weight: 500;
        display: flex;
        align-items: center;
        gap: 10px;
        padding: 15px 0;
        transition: color 0.3s ease;
    }

    .continue-shopping:hover {
        color: #667eea;
        text-decoration: none;
    }

    .proceed-btn {
        background: linear-gradient(135deg, #28a745, #20c997);
        border: none;
        color: white;
        padding: 15px 50px;
        border-radius: 30px;
        font-size: 1.2rem;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 12px;
        transition: all 0.3s ease;
        box-shadow: 0 6px 20px rgba(40, 167, 69, 0.3);
        cursor: pointer;
        text-decoration: none;
    }

    .proceed-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 30px rgba(40, 167, 69, 0.4);
        color: white;
        text-decoration: none;
    }

    .proceed-btn button {
        background: none;
        border: none;
        color: inherit;
        font: inherit;
        cursor: inherit;
    }

    /* Responsive Design */
    @media (min-width: 1200px) {
        .main-container {
            padding: 50px;
        }

        .col-lg-9 {
            padding-right: 30px;
        }

        .col-lg-3 {
            padding-left: 30px;
        }

        .price-card {
            min-width: 350px;
        }
    }

    @media (max-width: 991px) {
        .main-container {
            display: flex;
            flex-direction: column;
            min-height: calc(100vh - 140px); /* Adjust based on header/footer height */
            margin-top: 80px;
            padding: 20px;
            border-radius: 15px;
        }

        .action-row {
            margin-top: auto; /* Pushes action-row to the bottom */
            flex-direction: column;
            text-align: center;
            padding: 20px 0;
            width: 100%;
        }

        .proceed-btn,
        .continue-shopping {
            width: 100%; /* Full width for buttons on small screens */
            justify-content: center;
        }

        .proceed-btn {
            order: 1; /* Ensure Proceed to Checkout is first */
        }

        .continue-shopping {
            order: 2; /* Continue Shopping comes second */
            margin-top: 15px;
        }

        .payment-options {
            grid-template-columns: 1fr;
        }

        .price-card {
            position: static;
            margin-top: 30px;
            min-width: auto;
        }

        .coupon-input-group {
            flex-direction: column;
            border-radius: 12px;
        }

        .coupon-select {
            border-radius: 12px 12px 0 0;
            border-bottom: none;
        }

        .coupon-btn {
            border-radius: 0 0 12px 12px;
        }
    }

    /* Hidden address animation */
