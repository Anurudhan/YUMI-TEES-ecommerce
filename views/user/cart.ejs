<section class="bg-light" style="padding: 60px 0; min-height: 100vh;">
    <div class="container">
        <div class="main-container">
            <div class="row">
                <div class="col-lg-9">
                    <!-- Cart Items Section -->
                    <div class="section-card">
                        <div class="section-header">
                            <div>
                                <i class="bi bi-cart-fill me-2"></i>
                                Your Cart
                            </div>
                        </div>

                        <% if (carts && carts.length > 0) { %>
                            <% carts.forEach((ele, index) => { %>
                                <div class="cart-item-card" id="cartRow<%= ele.productid._id %>">
                                    <div class="d-flex flex-column flex-md-row align-items-start align-items-md-center">
                                        <a href="/uniqueproduct/<%= ele.productid._id %>" class="me-4">
                                            <img class="product-image" src="/productimages/<%= ele.productid.images[0] %>" alt="<%= ele.productid.productName %>">
                                        </a>
                                        <div class="flex-grow-1">
                                            <h4 class="mb-2">
                                                <a href="/uniqueproduct/<%= ele.productid._id %>" style="text-decoration: none; color: #333;">
                                                    <%= ele.productid.productName.toUpperCase() %>
                                                </a>
                                            </h4>
                                            <p class="text-muted mb-2"><%= ele.productid.Description %></p>
                                            <p class="text-success mb-3">
                                                <%= ele.productid.Specification1 %>, <%= ele.productid.Specification2 %>, 
                                                <%= ele.productid.Specification3 %>, <%= ele.productid.Specification4 %>
                                            </p>
                                            <div class="d-flex align-items-center gap-4 flex-wrap">
                                                <div class="quantity-controls">
                                                    <button class="quantity-btn" id="btnDec" onclick="updateQuantity(-1,'<%= ele.productid._id %>','<%= ele.productid.stockQuantity %>','<%= ele.quantity %>','<%= ele._id %>','<%= ele.productid.price - ele.productid.discountAmount %>','<%= ele.productid.price %>','<%= ele.productid.discountAmount %>')">-</button>
                                                    <input type="text" class="quantity-input" id="quantity<%= ele.productid._id %>" value="<%= ele.quantity %>" min="1" max="5" readonly>
                                                    <button class="quantity-btn" id="btnIn" onclick="updateQuantity(1,'<%= ele.productid._id %>','<%= ele.productid.stockQuantity %>','<%= ele.quantity %>','<%= ele._id %>','<%= ele.productid.price - ele.productid.discountAmount %>','<%= ele.productid.price %>','<%= ele.productid.discountAmount %>')">+</button>
                                                    <div id="loading<%= ele.productid._id %>" class="spinner-border spinner-border-sm text-primary ms-2" role="status" style="display: none;">
                                                        <span class="visually-hidden">Loading...</span>
                                                    </div>
                                                </div>
                                                <div>
                                                    <strong><i class="bi bi-currency-rupee"></i><%= ele.productid.price - ele.productid.discountAmount %></strong>
                                                </div>
                                                <div>
                                                    <strong><i class="bi bi-currency-rupee"></i><span id="total<%= ele.productid._id %>"><%= (ele.productid.price - ele.productid.discountAmount) * ele.quantity %></span></strong>
                                                </div>
                                                <button type="button" class="remove-btn" onclick="removeFromCart('<%= ele.productid._id %>')">
                                                    <i class="bi bi-x-circle-fill me-2"></i>Remove
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            <% }) %>
                        <% } else { %>
                            <div class="text-center p-5">
                                <p class="text-muted">Your cart is empty.</p>
                                <a href="/allproduct" class="show-all-link">Start Shopping</a>
                            </div>
                        <% } %>

                        <!-- Pagination Controls -->
                        <% if (carts && carts.length > 0) { %>
                            <div class="pagination">
                                <button class="pagination-btn <%= page === 1 ? 'disabled' : '' %>" onclick="window.location.href='/cart?page=<%= page - 1 %>'" <%= page === 1 ? 'disabled' : '' %>>Previous</button>
                                <% for(let i = 1; i <= totalPages; i++) { %>
                                    <button class="pagination-btn <%= page === i ? 'active' : '' %>" onclick="window.location.href='/cart?page=<%= i %>'"><%= i %></button>
                                <% } %>
                                <button class="pagination-btn <%= page === totalPages ? 'disabled' : '' %>" onclick="window.location.href='/cart?page=<%= page + 1 %>'" <%= page === totalPages ? 'disabled' : '' %>>Next</button>
                            </div>
                        <% } %>
                    </div>
                </div>

                <!-- Price Details Sidebar -->
                <div class="col-lg-3">
                    <div class="price-card">
                        <div class="price-header">
                            <i class="bi bi-receipt me-2"></i>
                            PRICE DETAILS
                        </div>
                        <div class="price-details">
                            <div class="price-row">
                                <span>Subtotal:</span>
                                <span id="total-price">₹ <%= grandtotal %></span>
                            </div>
                            <div class="price-row">
                                <span>Discount:</span>
                                <span id="totalDiscount" style="color: #28a745;">-₹ <%= disctotal %></span>
                            </div>
                            <div class="price-row">
                                <span>Delivery charges:</span>
                                <% if (totalprice < 1000) { %>
                                    <span style="color: #dc3545;">+₹ 40</span>
                                <% } else { %>
                                    <div>
                                        <span style="color: #28a745; font-size: 0.9rem;">Free</span>
                                        <del class="text-muted" style="font-size: 0.9rem; margin-left: 5px;">₹ 40</del>
                                    </div>
                                <% } %>
                            </div>
                            <div class="price-row total-row">
                                <span>TOTAL PAYABLE</span>
                                <span id="grand-total">₹ <%= totalprice + (totalprice < 1000 ? 40 : 0) %></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="action-row">
                <a href="/allproduct" class="continue-shopping">
                    <i class="bi bi-arrow-left"></i>
                    Continue Shopping
                </a>
                <a href="/placeorder" class="proceed-btn" id="placeOrderBtn">
                    <i class="bi bi-basket2-fill"></i>
                    Place Order
                </a>
            </div>
        </div>
    </div>
</section>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
<script>
    function updateQuantity(change, productId, stock, currentQuantity, id, price, grandtotal, discount) {
        const input = document.getElementById('quantity' + productId);
        const total = document.getElementById('total' + productId);
        const grandprice = document.getElementById('total-price');
        const discountAmount = document.getElementById('totalDiscount');
        const totalAmount = document.getElementById('grand-total');
        const btnIn = document.getElementById('btnIn');
        const btnDec = document.getElementById('btnDec');
        const placeOrderBtn = document.getElementById('placeOrderBtn');
        const loadingSpinner = document.getElementById('loading' + productId);
        const newValue = parseInt(input.value) + change;

        if (newValue >= parseInt(input.min) && newValue <= parseInt(input.max) && newValue <= stock) {
            placeOrderBtn.classList.add('disabled');
            placeOrderBtn.style.pointerEvents = 'none';
            placeOrderBtn.style.opacity = '0.6';
            loadingSpinner.style.display = 'inline-block';
            btnIn.disabled = true;
            btnDec.disabled = true;

            input.value = newValue;
            total.innerHTML = newValue * price;
            const newGrandTotal = parseInt(grandprice.innerHTML.replace(/[^\d.-]/g, '')) + (change * grandtotal);
            const newDiscountTotal = parseInt(discountAmount.innerHTML.replace(/[^\d.-]/g, '')) + (change * discount);
            let newTotalAmount = parseInt(totalAmount.innerHTML.replace(/[^\d.-]/g, '')) + (change * price);
            if (newTotalAmount < 1000) newTotalAmount += 40; // Add delivery charge if total < 1000
            grandprice.innerHTML = '₹ ' + newGrandTotal;
            discountAmount.innerHTML = '₹ ' + newDiscountTotal;
            totalAmount.innerHTML = '₹ ' + newTotalAmount;

            const xhr = new XMLHttpRequest();
            const url = `/addtocart/${productId}/${change}`;
            xhr.open("GET", url, true);
            xhr.onreadystatechange = function () {
                if (xhr.readyState === 4) {
                    placeOrderBtn.classList.remove('disabled');
                    placeOrderBtn.style.pointerEvents = 'auto';
                    placeOrderBtn.style.opacity = '1';
                    loadingSpinner.style.display = 'none';
                    btnIn.disabled = newValue >= 5 || newValue >= stock;
                    btnDec.disabled = newValue <= 1;

                    if (xhr.status === 200) {
                        const response = JSON.parse(xhr.responseText);
                        grandprice.innerHTML = '₹ ' + response.grandtotal;
                        discountAmount.innerHTML = '₹ ' + response.disctotal;
                        totalAmount.innerHTML = '₹ ' + (response.totalprice + (response.totalprice < 1000 ? 40 : 0));
                        Toastify({
                            text: response.msg,
                            duration: 3000,
                            backgroundColor: "green",
                            position: "center"
                        }).showToast();
                    } else {
                        const response = JSON.parse(xhr.responseText);
                        input.value = parseInt(input.value) - change;
                        total.innerHTML = (newValue - change) * price;
                        const revertGrandTotal = newGrandTotal - (change * grandtotal);
                        const revertDiscountTotal = newDiscountTotal - (change * discount);
                        let revertTotalAmount = newTotalAmount - (change * price);
                        if (revertTotalAmount < 1000) revertTotalAmount += 40;
                        grandprice.innerHTML = '₹ ' + revertGrandTotal;
                        discountAmount.innerHTML = '₹ ' + revertDiscountTotal;
                        totalAmount.innerHTML = '₹ ' + revertTotalAmount;
                        btnIn.disabled = (parseInt(input.value) >= 5 || parseInt(input.value) >= stock);
                        btnDec.disabled = parseInt(input.value) <= 1;

                        Toastify({
                            text: response.msg || "Failed to update quantity. Please try again.",
                            duration: 3000,
                            backgroundColor: "red",
                            position: "center"
                        }).showToast();
                    }
                }
            };
            xhr.send();
        } else {
            Toastify({
                text: `Quantity must be between ${input.min} and ${Math.min(input.max, stock)}.`,
                duration: 3000,
                backgroundColor: "orange",
                position: "center"
            }).showToast();
        }
    }

    function removeFromCart(productId) {
        Swal.fire({
            title: 'Are you sure?',
            text: "You want to remove this item from the cart?",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#28a745',
            cancelButtonColor: '#dc3545',
            confirmButtonText: 'Yes, remove it!'
        }).then((result) => {
            if (result.isConfirmed) {
                const xhr = new XMLHttpRequest();
                xhr.open("DELETE", `/removecart/${productId}`, true);
                xhr.onreadystatechange = function () {
                    if (xhr.status === 200 && xhr.readyState === 4) {
                        const response = JSON.parse(xhr.responseText);
                        document.getElementById('cartRow' + productId).remove();
                        document.getElementById('total-price').innerHTML = '₹ ' + response.grandtotal;
                        document.getElementById('totalDiscount').innerHTML = '₹ ' + response.disctotal;
                        document.getElementById('grand-total').innerHTML = '₹ ' + (response.totalprice + (response.totalprice < 1000 ? 40 : 0));
                        Toastify({
                            text: response.msg,
                            duration: 3000,
                            backgroundColor: "green",
                            position: "center"
                        }).showToast();
                        // Reload page to update pagination
                        window.location.href = '/cart?page=<%= page %>';
                    } else if (xhr.status !== 200) {
                        const response = JSON.parse(xhr.responseText);
                        Toastify({
                            text: response.msg || "Failed to remove item.",
                            duration: 3000,
                            backgroundColor: "red",
                            position: "center"
                        }).showToast();
                    }
                };
                xhr.send();
            }
        });
    }
</script>

