<style>
    body {
        min-height: 100vh;
    }

    .main-container {
        padding: 10px;
        max-width: 1400px;
    }

    .section-card {
        background: #ffffff;
        border-radius: 16px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.08);
        border: 1px solid rgba(255, 255, 255, 0.2);
        transition: all 0.3s ease;
        margin-bottom: 20px;
        overflow: hidden;
    }

    .section-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 12px 40px rgba(0, 0, 0, 0.12);
    }

    .section-header {
        background: linear-gradient(135deg, #4a90e2, #50c9c3);
        color: white;
        padding: 20px;
        font-size: 1.3rem;
        font-weight: 600;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .cart-item-card {
        background: #ffffff;
        border: 2px solid #f0f0f0;
        border-radius: 12px;
        margin: 15px;
        padding: 15px;
        transition: all 0.3s ease;
        position: relative;
    }

    .cart-item-card:hover {
        border-color: #667eea;
        box-shadow: 0 4px 20px rgba(102, 126, 234, 0.15);
    }

    .product-image {
        width: 70px;
        height: 70px;
        object-fit: cover;
        border-radius: 8px;
    }

    .quantity-controls {
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .quantity-btn {
        background: linear-gradient(135deg, #667eea, #764ba2);
        border: none;
        color: white;
        padding: 8px 12px;
        border-radius: 50%;
        font-size: 1rem;
        transition: all 0.3s ease;
        width: 36px;
        height: 36px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .quantity-btn:hover {
        transform: translateY(-1px);
        box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
    }

    .quantity-input {
        width: 50px;
        text-align: center;
        border: 1px solid #e0e0e0;
        border-radius: 8px;
        padding: 6px;
        font-size: 1rem;
    }

    .remove-btn {
        background: linear-gradient(135deg, #dc3545, #c82333);
        border: none;
        color: white;
        padding: 10px 20px;
        border-radius: 25px;
        font-weight: 600;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(220, 53, 69, 0.3);
    }

    .remove-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(220, 53, 69, 0.4);
    }

    .price-card {
        background: #ffffff;
        border-radius: 16px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.08);
        position: sticky;
        top: 120px;
        overflow: hidden;
        min-width: 320px;
    }

    .price-header {
        background: linear-gradient(135deg, #28a745, #20c997);
        color: white;
        padding: 25px;
        font-size: 1.2rem;
        font-weight: 600;
    }

    .price-details {
        padding: 25px;
    }

    .price-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 15px;
        padding: 10px 0;
    }

    .price-row:not(:last-child) {
        border-bottom: 1px solid rgba(0, 0, 0, 0.05);
    }

    .total-row {
        background: linear-gradient(135deg, rgba(102, 126, 234, 0.05), rgba(118, 75, 162, 0.05));
        margin: 25px -25px -25px;
        padding: 25px;
        font-size: 1.3rem;
        font-weight: 700;
        color: #333;
    }

    .action-row {
        padding: 40px 0;
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 25px;
    }

    .continue-shopping {
        color: #6c757d;
        text-decoration: none;
        font-weight: 500;
        display: flex;
        align-items: center;
        gap: 10px;
        padding: 15px 0;
        transition: color 0.3s ease;
    }

    .continue-shopping:hover {
        color: #667eea;
        text-decoration: none;
    }

    .proceed-btn {
        background: linear-gradient(135deg, #28a745, #20c997);
        border: none;
        color: white;
        padding: 15px 50px;
        border-radius: 30px;
        font-size: 1.2rem;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 12px;
        transition: all 0.3s ease;
        box-shadow: 0 6px 20px rgba(40, 167, 69, 0.3);
        cursor: pointer;
        text-decoration: none;
    }

    .proceed-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 30px rgba(40, 167, 69, 0.4);
        color: white;
        text-decoration: none;
    }

    .pagination {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-top: 20px;
        gap: 10px;
    }

    .pagination-btn {
        background: linear-gradient(135deg, #667eea, #764ba2);
        color: white;
        border: none;
        padding: 8px 16px;
        border-radius: 8px;
        font-size: 1rem;
        transition: all 0.3s ease;
        cursor: pointer;
    }

    .pagination-btn:hover {
        transform: translateY(-1px);
        box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
    }

    .pagination-btn.disabled {
        background: #ccc;
        cursor: not-allowed;
        transform: none;
        box-shadow: none;
    }

    .pagination-btn.active {
        background: linear-gradient(135deg, #4a90e2, #50c9c3);
        font-weight: 600;
    }

    /* Responsive Design */
    @media (min-width: 1200px) {
        .main-container {
            padding: 50px;
        }

        .col-lg-9 {
            padding-right: 30px;
        }

        .col-lg-3 {
            padding-left: 30px;
        }

        .price-card {
            min-width: 350px;
        }
    }

    @media (max-width: 991px) {
        .main-container {
            display: flex;
            flex-direction: column;
            min-height: calc(100vh - 140px);
            margin-top: 80px;
            padding: 20px;
            border-radius: 15px;
        }

        .action-row {
            margin-top: auto;
            flex-direction: column;
            text-align: center;
            padding: 20px 0;
            width: 100%;
        }

        .proceed-btn,
        .continue-shopping {
            width: 100%;
            justify-content: center;
        }

        .proceed-btn {
            order: 1;
        }

        .continue-shopping {
            order: 2;
            margin-top: 15px;
        }

        .price-card {
            position: static;
            margin-top: 30px;
            min-width: auto;
        }
    }
</style>

